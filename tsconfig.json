{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    // Allow using the latest ECMAScript proposed features and libraries.
    // https://github.com/tc39/proposals
    "lib": ["DOM", "ESNext"],
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@api/*": ["api/*"],
      "@slices/*": ["store/slices/*"],
      "@screens/*": ["screens/*"]
    }
  }
}
